@model List<TournamentUser>

@{
    ViewData["Title"] = "Tournament Score List";
    Layout = "_Layout1";
}

<h1>Tournament Score List</h1>

<table class="table">
    <thead>
        <tr>
            <th>User Name</th>
            <th>Lose Count</th>
            <th>Win Count</th>
            <th>Bye Count</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tournamentUser in Model)
        {
            <tr>
                <td>@tournamentUser.User.Name</td>
                <td>@tournamentUser.LoseCount</td>
                <td>@tournamentUser.WinCount</td>
                <td>@tournamentUser.ByeCount</td>
            </tr>
        }
    </tbody>
</table>
