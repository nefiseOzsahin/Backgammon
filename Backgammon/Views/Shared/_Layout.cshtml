<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/lib/font-awesome/css/all.min.css" rel="stylesheet" />
    <link href="~/lib/toastr.js/toastr.min.css" rel="stylesheet" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg bg-body-tertiary">
            <div class="container">
                <a class="navbar-brand" href="#">Navbar</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        @if (User != null && User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-action="Create" asp-controller="User">Oyuncu Ekle</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-action="GetUserList" asp-controller="User">Oyuncu Listesi</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-action="CreateT" asp-controller="Tournament">Turnuva Ekle</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-action="GetListT" asp-controller="Tournament">Turnuva Listesi</a>
                            </li>
                            if (User.Identity.Name == "erkin")
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-action="CreateAdmin" asp-controller="User">Admin Oluştur</a>
                                </li>
                            }
                        }
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-action="SignOut" asp-controller="User">Çıkış</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-action="SignIn" asp-controller="User">Giriş</a>
                            </li>

                        }

                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <section>
        <div class="container">
            @RenderBody()
        </div>
    </section>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/font-awesome/js/all.min.js"></script>
    <script src="~/lib/toastr.js/toastr.min.js"></script>
    @RenderSection("Script", required: false)
</body>

</html>
