                            <div class="text10">Oyuncular</div>
                        </div>
                        <div class="badge">
                            <div class="badge-base">
                                <div class="text11">@Model.Count() oyuncu</div>
                            </div>
                        </div>
                    </div>
                </div>
                <table class="table" id="userTable">
                    <thead>
                        <tr class="content8" style="border:none">
                            <th class="column">
